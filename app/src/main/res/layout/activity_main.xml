<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="adapter"
            type="by.ve.omdbapiandroid.view.MoviesAdapter" />

        <variable
            name="viewModel"
            type="by.ve.omdbapiandroid.presentation.MoviesListViewModel" />
    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="top"
                android:layout_margin="@dimen/spacing_8"
                android:background="@drawable/bg_search_view"
                app:menu="@menu/menu_search">

                <androidx.appcompat.widget.SearchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:iconifiedByDefault="false"
                    app:onQueryChange="@{viewModel::onSearchQueryChange}"
                    app:query="@{viewModel.query}"
                    app:queryHint="@string/search_hint"
                    app:searchIcon="@null"
                    app:queryBackground="@null"/>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:adapter="@{adapter}"
            app:itemSpacing="@{@dimen/spacing_8}"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:spanCount="@integer/movies_list_columns_count"
            tools:listitem="@layout/item_movie" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>